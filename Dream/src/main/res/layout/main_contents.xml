                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="TODO"/>
        <ImageView
                android:id="@+id/main_image1"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="TODO"/>
        <ImageView
                android:id="@+id/main_image2"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="TODO" />
        <ImageView
                android:id="@+id/main_image3"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="TODO" />
        <ImageView
                android:id="@+id/main_image4"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="TODO" />
        <ImageView
                android:id="@+id/main_image5"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="TODO" />
        <ImageView
                android:id="@+id/main_image6"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="TODO" />
        <ImageView
                android:id="@+id/main_image7"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="TODO" />
        <ImageView
                android:id="@+id/main_image8"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="TODO" />
        <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/bkt_count" android:layout_gravity="center_horizontal" android:visibility="invisible"
                android:background="@drawable/bkt_cnt"
                android:layout_centerInParent="true" android:textStyle="bold"
                android:typeface="normal" android:gravity="center" android:textSize="8pt" android:paddingBottom="2dp"
                android:enabled="false"/>
    </RelativeLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="DECADE"
            android:shadowColor="#AA000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:background="#00000000"
            android:drawableRight="@drawable/pencil"
            android:drawablePadding="5dp"
            android:id="@+id/btn_decade" android:layout_gravity="center_horizontal" android:layout_marginTop="60dp"
            android:textSize="11pt" android:textStyle="bold" android:typeface="normal"
            android:singleLine="true"
            android:ellipsize="end" android:layout_marginLeft="25dp" android:layout_marginRight="25dp"
            android:paddingLeft="15dp" android:paddingRight="10dp"/>


    <ImageView
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:id="@+id/imageView" android:layout_gravity="center_horizontal"
            android:background="@drawable/mainview_devider1"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="2012~2021"
            android:textColor="#FFFFFFFF"
            android:shadowColor="#60000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8"
            android:id="@+id/period" android:gravity="center" android:layout_gravity="center_horizontal"
            android:textSize="9pt" android:background="#00000000" android:layout_marginTop="5dp"
            android:singleLine="true" android:paddingLeft="5dp" android:paddingRight="5dp"/>
