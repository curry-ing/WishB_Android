<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/main_contents">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="300dp" android:layout_marginTop="115dp">
        <ImageView
                android:id="@+id/progress_bar"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="TODO"/>
        <ImageView
                android:id="@+id/main_image1"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="TODO"/>
        <ImageView
                android:id="@+id/main_image2"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="TODO" />
        <ImageView
                android:id="@+id/main_image3"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="TODO" />
        <ImageView
                android:id="@+id/main_image4"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="TODO" />
        <ImageView
                android:id="@+id/main_image5"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="TODO" />
        <ImageView
                android:id="@+id/main_image6"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="TODO" />
        <ImageView
                android:id="@+id/main_image7"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="TODO" />
        <ImageView
                android:id="@+id/main_image8"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="TODO" />


    </RelativeLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:minWidth="200dp"
            android:text=""
            android:shadowColor="#AA000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:background="#00000000"
            android:drawableRight="@drawable/pencil"
            android:drawablePadding="5dp"
            android:id="@+id/btn_decade" android:layout_gravity="center_horizontal" android:layout_marginTop="55dp"
            android:textSize="11pt" android:textStyle="bold" android:typeface="normal"
            android:singleLine="true"
            android:ellipsize="end" android:layout_marginRight="20dp"
            android:paddingLeft="15dp" android:paddingRight="5dp" android:layout_marginLeft="20dp"/>


    <ImageView
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:shadowColor="#FF000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:id="@+id/decadeBorder" android:layout_gravity="center_horizontal"
            android:background="@color/white"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text=""
            android:textColor="#FFFFFFFF"
            android:shadowColor="#60000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8"
            android:id="@+id/period" android:gravity="center" android:layout_gravity="center_horizontal"
            android:textSize="9pt" android:background="#00000000" android:layout_marginTop="5dp"
            android:singleLine="true" android:paddingLeft="5dp" android:paddingRight="5dp"/>

</LinearLayout>