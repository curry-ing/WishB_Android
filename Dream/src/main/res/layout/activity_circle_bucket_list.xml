<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pj="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}"
    android:background="@drawable/background_gradient"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.vivavu.lib.view.circular.SemiCircularList
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_card"
            android:scrollbars="horizontal"
            android:layout_weight="1"
            pj:circleRadius="120dp"
            pj:displaySubItemCount="7"
            pj:mainItemRadius="@dimen/subview_item_radius"
            pj:subItemRadius="55dp"
            pj:circleBackground="@drawable/sub_view_base_circle_border"
            >

        </com.vivavu.lib.view.circular.SemiCircularList>
        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:id="@+id/txt_indicator"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:text="  "
        android:drawableBottom="@drawable/sub_view_title_underline"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_add"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"/>

</RelativeLayout>
