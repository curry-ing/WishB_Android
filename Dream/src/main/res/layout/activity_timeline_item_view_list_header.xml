<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/container_post_info"
            android:paddingTop="12.5dp"
            android:paddingLeft="12.5dp"
            android:paddingRight="12.5dp"
            android:paddingBottom="12.5dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:hint="2014.03.03"
                    android:textSize="20sp"
                    android:id="@+id/txt_post_date"
                    android:typeface="sans"
                    android:background="@drawable/bg_timeline_view_timestamp_trans"
                    android:textColor="@color/gray"
                    android:padding="5dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:hint="17:30"
                    android:textSize="20sp"
                    android:id="@+id/txt_post_time"
                    android:typeface="sans"
                    android:background="@drawable/bg_timeline_view_timestamp_trans"
                    android:textColor="@color/gray"
                    android:paddingLeft="4dp"
                    android:padding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txt_post_date"
                    android:layout_marginLeft="10dp"
                    />
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_timeline_edit"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_timeline_edit"
                    android:background="@null"
                    android:padding="10dp"
                    />
                </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_post_text"
                android:background="@null"
                android:layout_marginTop="12.5dp"
                android:textSize="21.185sp"
                android:textColor="@color/default_darkgray"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/iv_timeline_image"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="17.5dp"
                android:visibility="gone"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout_social_react"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/txt_social_like_count"
                android:text="좋아요 0개"
                android:textSize="15dp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                style="@style/TextBucketDescriptionStyle"
                android:background="@drawable/bd_box_line_only"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/txt_social_reply_count"
                android:text="답글 0개"
                android:textSize="15dp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                style="@style/TextBucketDescriptionStyle"
                android:background="@drawable/bd_box_line_only"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>