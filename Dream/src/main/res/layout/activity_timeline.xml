<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_timeline"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/layout_bucket_default_info"
        >
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_previous"
                android:background="@null"
                android:id="@+id/menu_previous"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:layout_gravity="left"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:maxLength="20"
                android:ellipsize="end"
                android:textSize="23.415sp"
                style="@style/TextBucketTitleStyle"
                android:text="Title"
                android:id="@+id/txt_bucket_title"
                />
            </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_bucket"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_bucket_deadline"
                    android:textSize="20.07sp"
                    android:hint="deadline"
                    android:layout_gravity="right"
                    android:gravity="right"
                    style="@style/TextBucketDeadlineStyle"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_bucket_remain"
                    android:gravity="right"
                    android:textSize="32sp"
                    android:hint="2012"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    >
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="23dp"
                        android:src="@drawable/btn_timeline_achieve"
                        android:background="@null"
                        android:id="@+id/btn_achieve"
                        />
                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="22dp"
                        android:src="@drawable/btn_timeline_edit"
                        android:background="@null"
                        android:layout_marginLeft="11.5dp"
                        android:id="@+id/btn_edit"
                        />
                    </LinearLayout>
                </LinearLayout>
            <com.vivavu.dream.view.TextImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/img_bucket"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:id="@+id/txt_bucket_description"
                android:textSize="12.265sp"
                android:layout_toRightOf="@+id/img_bucket"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:maxLines="2"
                android:lines="2"
                style="@style/TextBucketTitleStyle"
                />
            </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >
                <Button
                    android:layout_width="21dp"
                    android:layout_height="21.5dp"
                    android:background="@drawable/ic_week_mon"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    />
                <Button
                    android:layout_width="21dp"
                    android:layout_height="21.5dp"
                    android:background="@drawable/ic_week_tue"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    />
                <Button
                    android:layout_width="21dp"
                    android:layout_height="21.5dp"
                    android:background="@drawable/ic_week_wen"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    />
                <Button
                    android:layout_width="21dp"
                    android:layout_height="21.5dp"
                    android:background="@drawable/ic_week_thu"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    />
                <Button
                    android:layout_width="21dp"
                    android:layout_height="21.5dp"
                    android:background="@drawable/ic_week_fri"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    />
                <Button
                    android:layout_width="21dp"
                    android:layout_height="21.5dp"
                    android:background="@drawable/ic_week_sat"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    />
                <Button
                    android:layout_width="21dp"
                    android:layout_height="21.5dp"
                    android:background="@drawable/ic_week_sun"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    />
                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    <Button
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:id="@+id/btn_add_bucket"
        android:shadowColor="#AA000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:layout_alignTop="@+id/layout_timeline_info"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_add"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="22dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_bucket_default_info"
        android:id="@+id/layout_timeline_info"
        >

        </LinearLayout>
</RelativeLayout>