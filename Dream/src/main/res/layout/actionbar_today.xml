<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/actionbar_height"
    android:gravity="center_vertical"
    android:background="@color/action_bar_main_view_background"
    >
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_previous"
        android:background="@null"
        android:id="@+id/menu_previous"
        style="@style/TextActionbarLeftButton"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/actionbar_main_title"
        android:text="Today"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/menu_previous"
        android:layout_toLeftOf="@+id/menu_save"
        style="@style/TextBucketTitleStyle"
        />

    <!--<ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actionbar_main_title"
        android:gravity="center"
        style="@style/WishbActionbarLogStyle"
        android:src="@drawable/logo_white_title"
    />-->

</RelativeLayout>