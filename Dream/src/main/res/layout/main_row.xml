<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_pager_bg0"/>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/main_pager_bg1"/>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_pager"
        android:clipToPadding="false"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <!--android:background="@drawable/mainview_bg">-->

    </android.support.v4.view.ViewPager>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="300dp" android:id="@+id/progress_layout"
            android:layout_alignTop="@+id/main_progress" android:layout_centerHorizontal="true"
            >
    </LinearLayout>
    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/main_progress" android:layout_alignParentBottom="false" android:layout_centerHorizontal="true"
            android:layout_marginTop="115dp" android:layout_alignParentTop="true"/>


</RelativeLayout>