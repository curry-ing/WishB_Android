<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vivavu.dream.activity.main.MainActivity"
    tools:ignore="MergeRootFrame"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/content_view_pager"
            android:layout_alignParentBottom="true"
            >
        </android.support.v4.view.ViewPager>
        </RelativeLayout>
    <fragment
        android:id="@+id/main_left_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/actionbar_height"
        android:name="com.vivavu.dream.fragment.main.LeftMenuDrawerFragment"
        tools:layout="@layout/fragment_main_left_menu"/>

</android.support.v4.widget.DrawerLayout>