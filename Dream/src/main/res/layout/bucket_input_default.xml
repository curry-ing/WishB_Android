<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_bucket_edit_main"
    android:paddingTop="100dp"
    >
    <com.vivavu.dream.view.TextImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/bucket_img"
        android:background="@drawable/sub_view_default_circle"
        >

    </com.vivavu.dream.view.TextImageView>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bucket_input_title"
        android:drawableRight="@drawable/ic_pencil"
        android:background="@drawable/inputbox_underline"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="6dp"
        android:minWidth="200dp"
        android:layout_marginBottom="10dp"
        android:hint="@string/bucket_input_title" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bucket_input_deadline"
        android:inputType="time"
        android:drawableRight="@drawable/ic_calendar"
        android:background="@drawable/inputbox_underline"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="6dp"
        android:minWidth="200dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_bucket_option_padding_left"
            android:paddingRight="@dimen/layout_bucket_option_padding_right"
            android:gravity="center_horizontal"
            >
            <Button
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:id="@+id/btn_bucket_option_note"
                android:clickable="true"
                android:background="@drawable/ic_memo"

                />
            <Button
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:id="@+id/btn_bucket_option_repeat"
                android:background="@drawable/ic_repeat"
                android:enabled="true"
                android:clickable="true"
                />
            <Button
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:id="@+id/btn_bucket_option_public"
                android:background="@drawable/ic_lock"
                android:enabled="true"
                android:clickable="true"
                />
            <Button
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:id="@+id/btn_bucket_option_pic"
                android:background="@drawable/camera_blue"
                android:clickable="true"
                android:visibility="gone"
                android:enabled="true" />
            <Button
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:id="@+id/btn_bucket_option_gallery"
                android:background="@drawable/camera_blue"
                android:clickable="true"
                android:visibility="gone"
                android:enabled="true" />
            <Button
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:id="@+id/btn_bucket_option_del"
                android:background="@drawable/ic_delete"
                android:clickable="true"
                android:enabled="true" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>