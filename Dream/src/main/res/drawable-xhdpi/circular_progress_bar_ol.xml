<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/progress">
        <shape
                android:shape="ring"
                android:innerRadius="135dp"
                android:thickness="5dp">
            <gradient
                    android:centerX="0.5"
                    android:centerY="0.5"
                    android:startColor="@color/color_preloader_start"
                    android:centerColor="@color/color_preloader_start"
                    android:endColor="@color/color_preloader_start"
                    android:type="sweep"
                    android:useLevel="false" />
            <size
                android:height="280dp"
                android:width="280dp" />
        </shape>
    </item>
</layer-list>