<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomeImageView">
        <attr name="text" format="string"></attr>
        <attr name="textSize" format="dimension"></attr>
        <attr name="textColor" format="color"></attr>
        <attr name="isShadow" format="boolean"></attr>
        <attr name="shadowColor" format="color"></attr>
        <attr name="shadowDx" format="float"></attr>
        <attr name="shadowDy" format="float"></attr>
        <attr name="shadowRadius" format="float"></attr>
        <attr name="ellipsize" format="string"></attr>
        <attr name="foregroundResId" format="reference"></attr>
        <attr name="progressBarWidth" format="dimension"></attr>
        <attr name="progressBarColor" format="color"></attr>
        <attr name="expand" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="LinkEllipseTextView">
        <attr name="isLinkable" format="boolean" />
        <attr name="isEndEllipsable" format="boolean" />
    </declare-styleable>

</resources>