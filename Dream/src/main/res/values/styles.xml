<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="android:actionBarSize">@dimen/actionbar_height</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
        <!--<item name="android:background">@drawable/background_gradient</item>-->
    </style>
    <style name="ActionBarTabStyle" parent="android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:minHeight">@dimen/actionbar_height</item>
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/action_bar</item>
        <!--<item name="android:background">@color/mint</item>-->
        <!--<item name="android:itemBackground">@color/mint</item>-->
    </style>
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#FF00ff</item>
    </style>
    <style name="TextBucketTitleStyle" >
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">20</item>
        <item name="android:shadowColor">#AA000000</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>
    <style name="TextBucketDescriptionStyle" >
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#AA000000</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>
    <style name="TextBucketDeadlineStyle" >
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#AA000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">8.0</item>
    </style>
    <style name="ActivityBottomLine">

    </style>
    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="AnimationPopup">
        <item name="android:windowEnterAnimation">@anim/dropdown</item>
        <item name="android:windowExitAnimation">@anim/riseup</item>
    </style>

</resources>
