<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="android:actionBarSize">@dimen/actionbar_height</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
        <!--<item name="android:background">@drawable/background_gradient</item>-->
    </style>
    <style name="ActionBarTabStyle" parent="android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:minHeight">@dimen/actionbar_height</item>
        <item name="android:background">@color/action_bar</item>
    </style>
    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/action_bar</item>
        <!--<item name="android:background">@color/mint</item>-->
        <!--<item name="android:itemBackground">@color/mint</item>-->
    </style>
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#FF00ff</item>
    </style>
    <style name="WishbActionbarLogStyle">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="TextBucketTitleStyle" >
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">20</item>
        <item name="android:shadowColor">#AA000000</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="TextActionbarRightButton">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:shadowColor">#AA000000</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:paddingRight">15dp</item>
    </style>
    <style name="TextActionbarLeftButton">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:shadowColor">#AA000000</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="TextBucketDescriptionStyle" >
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#AA000000</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>
    <style name="TextBucketDeadlineStyle" >
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#AA000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">8.0</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="AnimationPopup">
        <item name="android:windowEnterAnimation">@anim/dropdown</item>
        <item name="android:windowExitAnimation">@anim/riseup</item>
    </style>
    <style name="Theme.AppCompat.Light.NoActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
